.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
}

.tab-item {
  display: inline-block;
  width: 33%;
  text-align: center;
}

.tab-item.active {
  color: #444;
  font-weight: bold;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 5rpx;
  width: 100%;
  background: #444;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}

.item-ans {
